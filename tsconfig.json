{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "server/dist",
    "baseUrl": ".",
    "rootDir": "./",
    "skipLibCheck": true
  },
  "include": [
    "server/src/**/*.ts"
  ],
  "exclude": [
    "server/dist"
  ]
}